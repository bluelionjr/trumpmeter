<section class="section hero is-dark">
  <div class="container">
    <div class="columns">
      <div class="column is-three-quarters has-text-centered">
        <p class="title is-1">
          Cast your vote!
        </p>
        <p class="title is-3">
          You can change it any time you like.
        </p>
      </br>
        <p class="title is-2">
          Do you currently approve or disapprove of how Donald Trump is doing as president of the United States?
        </p>
      </div>

      <div class="column is-hidden-mobile has-text-right">
        <div class= "is-overlay">
            <iframe src="//rcm-na.amazon-adsystem.com/e/cm?o=1&p=14&l=ur1&category=gift_certificates&banner=0S32YAVKXXKQGNQSSGG2&f=ifr&linkID=e89303503b4dc489264ac8744a057cff&t=bllite-20&tracking_id=bllite-20" width="160" height="600" scrolling="no" border="0" marginwidth="0" style="border:none;" frameborder="0"></iframe>
        </div>
      </div>

    </div>
  </div>
  <br>


    <div class="container">


      <%= form_for @poll do |f| %>

      <div class="columns">
        <div class="column has-text-centered is-one-quarter">
          <p class="notification is-success">
            <label class="radio">
              <%= radio_button_tag(:vote, "approve") %>
            </label>
            <span class="radiotext">
              Approve for now
            </span>
            <span>
              <i class="fa fa-thumbs-up fa-4x" aria-hidden="true"></i>
            </span>
        </p>
        </div>

      <div class="column has-text-centered is-one-quarter">
        <p class="notification is-warning">
          <label class="radio">
            <%= radio_button_tag(:vote, "disapprove") %>
          </label>
          <span class="radiotext">
            Disapprove for now
          </span>
          <span>
            <i class="fa fa-thumbs-down fa-4x" aria-hidden="true"></i>
          </span>
        </p>
      </div>


      <div class="column has-text-centered is-one-quarter">
        <p class="notification is-danger">
          <label class="radio">
            <%= radio_button_tag(:vote, "novote") %>
          </label>
          <span class="radiotext">
            I'll sit out for now.
          </span>
          <span>
            <i class="fa fa-hand-paper-o fa-4x" aria-hidden="true"></i>
          </span>
        </p>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Save Your Vote", class: "button is-white is-medium is-outlined" %>
    </div>
      <% end %>
    </div>

</br>
</br>

  <div class="container">
    <div class="columns">
      <div class="column is-three-quarters has-text-centered">
        <p class="notification is-info title">
          Do you wear shirts? Visit our store.
          <i class="fa fa-arrow-right fa-lg" aria-hidden="true"></i>
          <i class="fa fa-arrow-right fa-lg" aria-hidden="true"></i>
          <i class="fa fa-arrow-right fa-lg" aria-hidden="true"></i>
          <i class="fa fa-arrow-right fa-lg" aria-hidden="true"></i>
          <%= link_to "Store", welcome_shop_path, class: 'button is-primary is-medium' %>
        </p>
      </div>
    </div>
  </div>
</br>

  <div class="container">
    <div class="columns">
      <div class="column is-three-quarters">
        <script src="//z-na.amazon-adsystem.com/widgets/onejs?MarketPlace=US&adInstanceId=f8d1a5ec-c24f-4c27-9db4-3af9f065b289"></script>
      </div>
    </div>
  </div>

  </section>
