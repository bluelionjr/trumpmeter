  <div class="row">
    <div class="col">
      <h1>
        Update your vote:
      </h1>
      <h2 class="text-muted">
        <% if @poll.vote == "novote" %>
        You neither approve nor disapprove of the president right now.
        <% else %>
        You currently <%= @poll.vote %> of the president.
        <% end %>
      </h2>
    </div>

