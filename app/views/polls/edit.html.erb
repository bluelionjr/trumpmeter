    <h3>How do you feel about the job that Donald Trump is doing today?</h3>

  </div> <!-- container -->
  <br>


<div class="container">
      <%= form_for @poll do |f| %>
      <div class="card card-success text-center" style="width: 24rem;">
      </br>
        <label class="radio">
          <%= radio_button_tag(:vote, "approve") %>
        </label>
      </br>
        <span>
          Approve for now
        </span>
        <span>
          <i class="fa fa-thumbs-up fa-4x" aria-hidden="true"></i>
        </span>
      </div>
      </br>
      </br>

      <div class="card card-danger text-center" style="width: 24rem;">
      </br>
        <label class="radio">
          <%= radio_button_tag(:vote, "disapprove") %>
        </label>
      </br>
        <span>
          Disapprove for now
        </span>
        <span>
          <i class="fa fa-thumbs-down fa-4x" aria-hidden="true"></i>
        </span>
      </div>
      </br>
      </br>

      <div class="card card-warning text-center" style="width: 24rem;">
      </br>
        <label class="radio">
          <%= radio_button_tag(:vote, "novote") %>
        </label>
      </br>
        <span>
          I'll sit out for now.
        </span>
        <span>
          <i class="fa fa-hand-paper-o fa-4x" aria-hidden="true"></i>
        </span>
      </div>
      </br>
      </br>

        <%= f.submit "Save Your Vote", class: "btn btn-primary btn-lg" %>

        <% end %>


</br>
</br>

