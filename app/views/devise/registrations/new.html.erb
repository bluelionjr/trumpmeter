<div class="container">
  <div class="form-signin">
    <h2 class="form-signin-heading">Register</h2>
    <h4 class="text-muted">We will not sell your email address. We hate spam too.</h4>

    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

          <%= f.email_field :email, autofocus: true, placeholder: "Enter your email address", class: "input" %>


          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Create password", class: "input" %>

        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm your password", class: "input" %>

        <%= f.select :state, options_for_select(us_states, :selected => @user.state), {}, {:include_blank => true, :autofocus => true, :class => "input"} %>

        <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>

    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div> <!-- Container -->
