<br>
<div class="flex is-flex">
  <div class="section">
    <div class="container is-fluid">
      <h1 class="title">Register</h1>
      <h3 class="subtitle">We will not sell your email address. We hate spam too.</h3>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>


        <div class="field">
          <p class="control">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, placeholder: "Enter your email address", class: "input" %>
          </p>
        </div>


        <div class="field">
          <p class="control">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", placeholder: "Create password", class: "input" %>
          </p>
        </div>

        <div class="field">
          <p class="control">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm your password", class: "input" %>
        </p>
        </div>

        <div class="field">
          <p class="control">
          <%= f.label :state %><br />
          <%= f.text_field :state, autofocus: true, placeholder: "Enter your state", class: "input" %>
        </p>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "button is-success is-medium is-pulled-right" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
