<div class="container">
  <div class="form-signin">
    <h2 class="form-signin-heading">Please sign in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <%= f.email_field :email, autofocus: true, placeholder: "Email address", class: "input form-control", id: "inputEmail" %>

      <%= f.password_field :password, autofocus: true, placeholder: "Password", autocomplete: "off", class: "input form-control", id: "inputPassword"%>


    <div class="checkbox">
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      <% end %>
    </div>

      <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div> <!-- container -->
